%h1 パスワードを変更
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  =render 'application/validation_errors', f: f
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  = f.input :password,
    label: '新しいパスワード',
    required: true,
    autofocus: true,
    hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length),
    input_html: { autocomplete: "new-password" }
  = f.input :password_confirmation, label: '新しいパスワード確認用', required: true
  .controls
    = f.button :submit, 'パスワードを変更', class: 'btn btn-danger'
= render "devise/shared/links"