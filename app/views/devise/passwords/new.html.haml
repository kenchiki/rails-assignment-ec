%h2 パスワードを忘れた場合
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  =render 'application/validation_errors', f: f

  = f.input :email,
    required: true,
    autofocus: true,
    input_html: { autocomplete: "email" }
  .controls
    = f.button :submit, 'パスワードリセットのリクエストを送る', class: 'btn-danger'
= render "devise/shared/links"