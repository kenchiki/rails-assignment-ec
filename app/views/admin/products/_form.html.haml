= simple_form_for [:admin, product], defaults: {  input_html: { class: 'form-control' } } do |f|
  =render 'application/validation_errors', f: f

  = f.input :name
  = f.input :image, input_html: { class: 'form-control-file' }

  = f.hidden_field :image_cache
  - if f.object.image?
    %p= image_tag f.object.image.url
    = f.input :remove_image, as: :boolean, label_html: { class: 'form-check-label' },input_html: { class: 'form-check-input is-valid boolean optional' }
  = f.input :description
  = f.fields_for :product_prices, product.product_prices_last_or_init, wrapper: :input_group do |ff|
    = ff.input :price,input_html: { class: 'form-control'}, append: '円'
  = f.fields_for :product_publishes, product.product_publishes_last_or_init do |ff|
    = ff.input :published, label_html: { class: 'form-check-label' }
  .controls
    = f.button :submit, class: 'btn-danger'
    = link_to '一覧に戻る', admin_products_path, class: 'btn btn-secondary'
