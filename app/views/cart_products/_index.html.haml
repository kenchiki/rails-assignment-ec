

%table{class: 'table table-striped table--responsive table--cart_products'}
  %thead
    %tr
      %th= t_model('product.name')
      %th= t_model('product_price.price')
      %th= t_model('cart_product.quantity')
      %th 操作

  %tbody
    - cart.cart_products.each do |cart_product|
      %tr
        %td{'aria-label': t_model('product.name')}= cart_product.product_name
        %td{'aria-label': t_model('product_price.price')}= cart_product.product_price
        %td{'aria-label': t_model('cart_product.quantity')}= cart_product.quantity
        %td{'aria-label': '操作'}
          = link_to '編集', edit_product_cart_product_path(cart_product.product, cart_product), class: 'btn btn-primary'
          = link_to '削除', cart_product_path(cart_product), method: :delete, class: 'btn btn-danger'
