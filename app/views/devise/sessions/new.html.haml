%h1 ログイン
= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: {  input_html: { class: 'form-control' } }) do |f|
  = f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email" }

  = f.input :password,
    required: false,
    input_html: { autocomplete: "current-password" }

  = f.input :remember_me, as: :boolean, label_html: { class: 'form-check-label' },input_html: { class: 'form-check-input is-valid boolean optional' } if devise_mapping.rememberable?
  .controls
    = f.button :submit, 'ログイン', {class: 'btn-danger'}
= render "devise/shared/links"
