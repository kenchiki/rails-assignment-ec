
%table{class: 'table table-striped table--responsive table--users'}
  %thead
    %tr
      %th ID
      %th= t_model('user.email')
      %th= t_model('user.created_at')
      %th 操作
  %tbody
    - users.each do |user|
      %tr
        %td{'aria-label': 'ID'}
          = user.id
        %td{'aria-label': t_model('user.email')}
          = user.email
        %td{'aria-label': t_model('user.created_at')}
          = l(user.created_at, format: :long)
        %td{'aria-label': '操作'}
          = link_to '詳細', [:admin, user], class: 'btn btn-secondary'
          = link_to '編集', edit_admin_user_path(user), class: 'btn btn-primary'
          = link_to '削除', [:admin, user], method: :delete, data: { confirm: t_common('delete_confirm') }, 'data-test': "user__destroy_#{user.id}", class: 'btn btn-danger'
